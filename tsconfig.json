{
  "compilerOptions": {
    "target": "ES6",                      
    "module": "CommonJS",                 
    "rootDir": "./src",                   
    "outDir": "./dist",                   
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        
    "skipLibCheck": true                   
  },
  "include": ["src/**/*.ts", "src/test/**/*.ts"],
  "exclude": ["node_modules"]
}